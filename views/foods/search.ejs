<%- include('../partials/header.ejs') %>
    
    <% if (foods.length === 0) { %>
        <p>No favorite foods</p>
    <% } else { %>
        <ul>
            <% foods.forEach(item=> { %>
                <li>
                    <%= item.name %>
                    <a href="/foods/<%= item._id %>/edit">Edit</a>
                    <form action="/search" method="GET">
                        <input placeholder="Enter food to find vegan alternative for.." name="food">
                        <button type="submit">Search</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    <% } %>

    <a href="/foods/new">Add to Favorites</a>
    <%- include('../partials/footer.ejs') %>